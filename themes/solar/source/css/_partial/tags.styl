
.tags
  display flex
  flex-wrap wrap

.tags li
  margin-right 5px;
  margin-bottom: 10px;
  width 20%

  padding-left 5px;
  //background #e3b54c
  border solid 1px #fff

  &:nth-of-type(2n)
    //background transparent
    //border-color #e3b54c
    border: solid 1px #e3b54c

    a
      color #e3b54c

  &:hover
    border-color $color-link

  a
    font-size 12px
    text-decoration none
    background-image none
    display block
    color #fff
    text-align center

    &:hover
      text-decoration none
      background-image none