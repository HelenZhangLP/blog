
.tags
  display flex
  flex-wrap wrap

.tags li
  margin-right 5px;
  margin-bottom: 10px;
  width 25%

  border: dotted 1px #efefef;
  border-radius 20px;
  padding-left 5px;

  &:hover
    border-color $color-link

  a
    font-size 12px;
    text-decoration none
    background-image none

    &:hover
      text-decoration none
      background-image none