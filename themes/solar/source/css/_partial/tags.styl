
.tags
  display flex
  flex-wrap wrap

.tags li
  margin-right 5px;
  margin-bottom: 10px;

  padding 0 5px;
  border solid 1px #fff
  border-radius 5px

  &:nth-of-type(2n)
    border: solid 1px #e3b54c

    a
      color #e3b54c

  &:nth-of-type(3n)
    border: solid 1px rebeccapurple

    a
      color rebeccapurple

  &:hover
    border-color $color-link

  a
    font-size 12px
    text-decoration none
    background-image none
    display block
    color #fff
    text-align center

    &:hover
      text-decoration none
      background-image none
      color $color-link